---
/* C03: Componente Contenedor */
import ProyectItem from "./ProyectItem.astro";
import { getCollection } from "astro:content";

// Obtener la colecci√≥n de proyectos
const proyects = await getCollection("proyects");
---

<!-- <article
  class="bg-white/10 backdrop-blur-lg border border-white/10 rounded-2xl shadow-lg grid grid-cols-[1fr_2fr] gap-6 p-6 my-4"
> -->
{
    proyects.map((proyect) => (
        <ProyectItem
            title={proyect.data.title}
            description={proyect.data.description}
            functionality={proyect.data.functionality}
            link={proyect.data.link}
            images={proyect.data.images}
        />
    ))
}

